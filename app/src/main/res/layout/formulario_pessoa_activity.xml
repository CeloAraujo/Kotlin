<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"   xmlns:app="http://schemas.android.com/apk/res-auto" >


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/nome_pessoa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Nome"
        android:layout_margin="20dp"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/idade_pessoa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Idade:24"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_pessoa" />
        />
    <EditText
        android:id="@+id/profissao_pessoa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Profissao"
        android:layout_margin="20dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/idade_pessoa"/>
        />

    <EditText
        android:id="@+id/altura_pessoa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Altura: 1.78"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profissao_pessoa" />

    <Button
        android:id="@+id/botao_salvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/altura_pessoa"
        app:layout_constraintStart_toStartOf="@+id/altura_pessoa"
        android:text="Salvar"
        app:layout_constraintVertical_bias="1"

        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>